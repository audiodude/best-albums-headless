<div class="row">
  <div class="col-6">
  <%= form_for @album do |f|%>
    <div class="mb-3">
      <%= f.label :title, 'Title', class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :artist, 'Artist', class: 'form-label' %>
      <%= f.text_field :artist, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :date, 'Release Date', class: 'form-label' %>
      <%= f.text_field :date, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :link, 'Link', class: 'form-label' %>
      <%= f.text_field :link, class: 'form-control' %>
    </div>
    
    <div class="mb-3">
      <%= f.label :qid, 'QID', class: 'form-label' %>
      <%= f.text_field :qid, class: 'form-control' %>
    </div>
    
    <div class="mb-3">
      <%= f.label :mbid, 'Musicbrainz ID', class: 'form-label' %>
      <%= f.text_field :mbid, class: 'form-control' %>
    </div>
    
    <div class="mb-3">
      <%= f.label :spotify_id, 'Spotify ID', class: 'form-label' %>
      <%= f.text_field :spotify_id, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.text_area :description, :rows => 8, :cols => 50, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :cover, 'Direct Upload Cover', class: 'form-label' %>
      <%= f.file_field :cover, direct_upload: true, class: 'form-control'%>
    </div>

    <div class="mb-3">
      <%= f.label :cover_url, 'Cover URL (overrides direct upload)', class: 'form-label' %>
      <%= f.text_field :cover_url, class: 'form-control' %>
    </div>

    <div class="mb-5">
      <%= f.submit 'Create or Update', class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>